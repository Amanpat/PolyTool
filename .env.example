# PolyTool Local Development Environment
# Copy this file to .env and customize as needed

# ClickHouse Configuration
CLICKHOUSE_DB=polyttool
CLICKHOUSE_USER=polyttool_admin
CLICKHOUSE_PASSWORD=polyttool_admin
# NOTE: Default ports 8123/9000 may conflict with other services
# Using alternate ports by default for local development
CLICKHOUSE_HTTP_PORT=18123
CLICKHOUSE_NATIVE_PORT=19000

# Grafana read-only user (created by init script)
GRAFANA_CH_USER=grafana_ro
GRAFANA_CH_PASSWORD=grafana_readonly_local

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# API Service Configuration
API_PORT=8000
API_BASE_URL=http://localhost:8000

# Polymarket API Configuration
GAMMA_API_BASE=https://gamma-api.polymarket.com
DATA_API_BASE=https://data-api.polymarket.com
INGEST_MAX_PAGES_DEFAULT=50
HTTP_TIMEOUT_SECONDS=20

# CLOB / PnL Configuration
CLOB_API_BASE=https://clob.polymarket.com
PNL_BUCKET_DEFAULT=day
PNL_ORDERBOOK_CACHE_SECONDS=30
PNL_MAX_TOKENS_PER_RUN=200
PNL_HTTP_TIMEOUT_SECONDS=20

# Scan Runner Configuration
TARGET_USER=@a4385
SCAN_MAX_PAGES=50
SCAN_BUCKET=day
SCAN_BACKFILL=true
SCAN_INGEST_MARKETS=false
SCAN_INGEST_ACTIVITY=false
SCAN_INGEST_POSITIONS=false
SCAN_COMPUTE_PNL=false
SCAN_HTTP_TIMEOUT_SECONDS=120
